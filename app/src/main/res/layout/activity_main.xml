<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/team1Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Germany"
        android:textSize="24sp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/increaseTeam1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:layout_below="@id/team1Score"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/decreaseTeam1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:layout_below="@id/team1Score"
        android:layout_toRightOf="@id/increaseTeam1Button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/team2Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexico"
        android:textSize="24sp"
        android:layout_below="@id/increaseTeam1Button"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/increaseTeam2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Up"
        android:layout_below="@id/team2Score"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/decreaseTeam2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Down"
        android:layout_below="@id/team2Score"
        android:layout_toRightOf="@id/increaseTeam2Button"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp" />

        <EditText
        android:id="@+id/scoreGermany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="Score-G"
        android:layout_below="@id/increaseTeam2Button"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/scoreMexico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score M"
        android:layout_below="@id/increaseTeam2Button"
        android:layout_marginTop="16dp" />

</RelativeLayout>
